# CUALA Configuration Example
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Provider Selection (options: 'openai' or 'anthropic')
LLM_PROVIDER=openai

# -----------------------------------------------------------------------------
# OpenAI Configuration (required if LLM_PROVIDER=openai)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o                    # Default model for general use
OPENAI_VISION_MODEL=gpt-4o              # Model for vision-based execution
OPENAI_PLANNER_MODEL=gpt-4o-mini        # Faster/cheaper model for planning

# -----------------------------------------------------------------------------
# Anthropic Claude Configuration (required if LLM_PROVIDER=anthropic)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022          # Default model for general use
ANTHROPIC_VISION_MODEL=claude-3-5-sonnet-20241022   # Model for vision-based execution
ANTHROPIC_PLANNER_MODEL=claude-3-5-haiku-20241022   # Faster/cheaper model for planning

# =============================================================================
# Execution Configuration
# =============================================================================
LOG_LEVEL=info                          # Log level: debug, info, warn, error
HEADLESS=true                           # Run browser in headless mode

# =============================================================================
# Refinement Configuration
# =============================================================================
MAX_RETRIES=2                          # Maximum retry attempts for failed steps
CONFIDENCE_THRESHOLD=0.6               # Confidence threshold for refinement (0-1)
PROACTIVE_REFINEMENT=true              # Enable proactive refinement before execution

# Confidence Thresholds by Action Type (0.0 to 1.0)
CONFIDENCE_THRESHOLD_CLICK=0.5
CONFIDENCE_THRESHOLD_TYPE=0.7
CONFIDENCE_THRESHOLD_HOVER=0.7
CONFIDENCE_THRESHOLD_VERIFY=0.7
CONFIDENCE_THRESHOLD_DEFAULT=0.6

# =============================================================================
# Storage Configuration
# =============================================================================
STORAGE_TYPE=memory                    # Storage backend: 'memory' or 'redis'
REDIS_URL=redis://localhost:6379       # Redis connection URL (required if STORAGE_TYPE=redis)

# =============================================================================
# Safety Configuration
# =============================================================================
SKIP_SAFETY_CHECK=false                # Skip safety checks to avoid rate limits
                                        # Set to 'true' to disable moderation API calls
                                        # Note: Safety check only available with OpenAI provider

# =============================================================================
# Server Configuration
# =============================================================================
PORT=3001                              # API server port
